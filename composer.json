{
  "name"        : "onsigbaar/components",
  "type"        : "library",
  "description" : "Components description.",
  "keywords"    : [
    "onsigbaar",
    "components"
  ],
  "homepage"    : "https://github.com/onsigbaar/components",
  "license"     : "MIT",
  "authors"     : [
    {
      "name"    : "anonymoussc",
      "email"   : "50c5ac69@opayq.com",
      "homepage": "https://github.com/onsigbaar",
      "role"    : "Developer"
    }
  ],
  "require"     : {
    "php"                   : "~5.6|~7.0",
    "laravel/framework"     : "5.1.*|5.2.*|5.3.*|5.4.*",
    "laravelcollective/html": "5.1.*|5.2.*|5.3.*|5.4.*"
  },
  "require-dev" : {
    "phpunit/phpunit"          : "~5.7",
    "squizlabs/php_codesniffer": "^2.3"
  },
  "autoload"    : {
    "psr-4": {
      "Onsigbaar\\Components\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Onsigbaar\\Components\\Tests\\": "tests"
    }
  },
  "scripts"     : {
    "test"       : "phpunit",
    "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
    "fix-style"  : "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
  },
  "extra"       : {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  },
  "config"      : {
    "sort-packages": true
  }
}
